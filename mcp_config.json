{
  "mcpServers": {
    "cardgener": {
      "command": "python",
      "args": [
        "mcp_server.py"
      ],
      "cwd": "/path/to/CardGener",
      "env": {},
      "description": "CardGener MCP Server - AI-powered card generation with comprehensive workflow tools"
    }
  },
  "tools": {
    "get_card_schema": {
      "description": "Get the current card schema definition",
      "required_parameters": [],
      "example": {}
    },
    "update_card_schema": {
      "description": "Update card schema to add/modify fields or types",
      "required_parameters": [
        "action"
      ],
      "optional_parameters": [
        "field_name",
        "field_config",
        "value"
      ],
      "example": {
        "action": "add_field",
        "field_name": "rarity",
        "field_config": {
          "type": "enum",
          "required": false,
          "description": "Card rarity",
          "values": ["Common", "Rare", "Legendary"]
        }
      }
    },
    "generate_card": {
      "description": "Generate a single card with AI-provided parameters",
      "required_parameters": [
        "card_name",
        "card_type",
        "rules_text",
        "cost",
        "power",
        "defense",
        "class_type"
      ],
      "optional_parameters": [
        "art_path",
        "artist",
        "year",
        "output_path",
        "template_path"
      ],
      "example": {
        "card_name": "Shadow Strike",
        "card_type": "Action - Attack",
        "rules_text": "Deal 5 damage to target hero. Go again.",
        "cost": "2",
        "power": "5",
        "defense": "3",
        "art_path": "images/shadow_strike.jpg",
        "class_type": "ninja",
        "artist": "John Doe",
        "year": "2024",
        "output_path": "output"
      }
    },
    "generate_cards_batch": {
      "description": "Generate multiple cards in batch with AI-provided parameters",
      "required_parameters": [
        "cards"
      ],
      "optional_parameters": [
        "output_path",
        "template_path"
      ],
      "example": {
        "cards": [
          {
            "card_name": "Ninja Strike",
            "card_type": "Action - Attack",
            "rules_text": "Deal 5 damage.",
            "cost": "2",
            "power": "5",
            "defense": "3",
            "class_type": "ninja"
          },
          {
            "card_name": "Warrior's Shield",
            "card_type": "Action - Defense",
            "rules_text": "Prevent 4 damage.",
            "cost": "1",
            "power": "0",
            "defense": "4",
            "class_type": "warrior"
          }
        ],
        "output_path": "output"
      }
    },
    "generate_ai_artwork": {
      "description": "Generate AI artwork for cards using free services",
      "required_parameters": [
        "cards"
      ],
      "optional_parameters": [
        "output_dir",
        "api_type",
        "width",
        "height"
      ],
      "example": {
        "cards": [
          {
            "card_name": "Shadow Strike",
            "card_type": "Action - Attack",
            "class_type": "ninja"
          }
        ],
        "output_dir": "generated_art",
        "api_type": "pollinations",
        "width": 1024,
        "height": 1024
      }
    },
    "render_cards_to_images": {
      "description": "Render card JSONs to PNG images via CardConjurer",
      "required_parameters": [
        "json_dir"
      ],
      "optional_parameters": [
        "output_dir",
        "headless",
        "overlay_art_dir"
      ],
      "example": {
        "json_dir": "output/cards",
        "output_dir": "rendered_cards",
        "headless": true,
        "overlay_art_dir": "generated_art"
      }
    },
    "stitch_card_images": {
      "description": "Stitch card images into printable sheets",
      "required_parameters": [
        "image_dir"
      ],
      "optional_parameters": [
        "output_path",
        "cols",
        "rows",
        "cards_per_sheet",
        "preset",
        "tts_mode"
      ],
      "example": {
        "image_dir": "rendered_cards",
        "output_path": "final_deck.png",
        "tts_mode": true,
        "preset": "4k"
      }
    },
    "full_workflow": {
      "description": "Execute complete card generation workflow from cards to stitched sheets",
      "required_parameters": [
        "cards"
      ],
      "optional_parameters": [
        "output_base_dir",
        "generate_artwork",
        "render_images",
        "stitch_images",
        "tts_format",
        "ai_api"
      ],
      "example": {
        "cards": [
          {
            "card_name": "Shadow Strike",
            "card_type": "Action - Attack",
            "rules_text": "Deal 5 damage. Go again.",
            "cost": "2",
            "power": "5",
            "defense": "3",
            "class_type": "ninja"
          }
        ],
        "output_base_dir": "complete_set",
        "generate_artwork": true,
        "render_images": true,
        "stitch_images": true,
        "tts_format": true,
        "ai_api": "pollinations"
      }
    }
  },
  "integration": {
    "claude_desktop": {
      "config_location": "~/.config/Claude/claude_desktop_config.json (Linux/Mac) or %APPDATA%\\Claude\\claude_desktop_config.json (Windows)",
      "setup_instructions": [
        "1. Open Claude Desktop configuration file",
        "2. Add CardGener MCP server configuration",
        "3. Update 'cwd' path to your CardGener directory",
        "4. Restart Claude Desktop",
        "5. Verify tools are available"
      ],
      "config_snippet": {
        "mcpServers": {
          "cardgener": {
            "command": "python",
            "args": [
              "mcp_server.py"
            ],
            "cwd": "/absolute/path/to/CardGener"
          }
        }
      }
    }
  },
  "supported_classes": [
    "ninja",
    "warrior",
    "wizard",
    "ranger",
    "guardian",
    "brute",
    "mechanologist",
    "runeblade",
    "merchant",
    "illusionist"
  ],
  "card_fields": {
    "required": {
      "card_name": "Card title/name",
      "card_type": "Card type (e.g., 'Action - Attack', 'Hero', 'Equipment')",
      "rules_text": "Card rules and effect text",
      "cost": "Resource cost",
      "power": "Attack power (left stat)",
      "defense": "Defense value (right stat)",
      "class_type": "Character class"
    },
    "optional": {
      "art_path": "Path or URL to card artwork",
      "artist": "Artist name for credits",
      "year": "Copyright year",
      "output_path": "Output directory",
      "template_path": "Custom template file path"
    }
  },
  "workflow_notes": {
    "full_workflow": "Use full_workflow for complete automation from card data to printable sheets",
    "individual_tools": "Use individual tools for fine-grained control over each step",
    "schema_management": "Customize card schema with get_card_schema and update_card_schema",
    "ai_services": "Free AI artwork via pollinations API, no API key required"
  }
}
